{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "DATABASE_NAME": "@database_name",
    "FOOTBALL_API_TOKEN": "@football_api_token",
    "REACT_APP_CLERK_PUBLISHABLE_KEY": "@react_app_clerk_publishable_key"
  }
}
