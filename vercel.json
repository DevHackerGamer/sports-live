{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "DATABASE_NAME": "@database_name",
    "FOOTBALL_API_TOKEN": "@football_api_token"
  }
}
